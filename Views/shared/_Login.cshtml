@using Microsoft.AspNet.Identity;



@if (Request.IsAuthenticated)
{
    using(Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoff" }))

    {
        @Html.AntiForgeryToken();
        <ul class="nav navbar-nav navbar-left">
            <li>
                <a href="javascript:document.getElementById('logoff').submit()">LogOut</a>
            </li>
            <li>
                @Html.ActionLink("Welcom Mr. " + User.Identity.GetUserName(), "Index", "Manage")
            </li>

        </ul>
    }
}


else
{
    <ul class="nav navbar-nav navbar-left">

        <li>
            <a href="http://localhost:32630/Account/Login">
                Login <i class="glyphicon glyphicon-user"></i>
            </a>
        </li>
        <li>
            <a href="http://localhost:32630/Account/Register">
                Register<i class="glyphicon glyphicon-lock"> </i>
            </a>
        </li>

    </ul>
}

