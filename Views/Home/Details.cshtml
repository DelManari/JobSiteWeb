@model JobOfersWebSite.Models.job

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/shared/_MainLayout.cshtml";
}
<h2>         @Html.DisplayFor(model => model.JobTitle) Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Categorie.CategorieName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categorie.CategorieName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobDiscription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobDiscription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobImage)
        </dt>

        <dd>
            <img src="~/Uploads/@Html.DisplayFor(model =>model.JobImage)" class="thumbnail" style="width:128px;height:128px;" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Apply this job", "Apply", new { id = Model.Id }, new { @class = "btn btn-success" })  
    @Html.ActionLink("Back to Home page", "Index", new { @class = "btn btn-default" }) 
</p>
